ROOT_GITHUBDIR=/home/kobayashi/gitdirs/github
ROOTDIR=/home/kobayashi

if [ ! -e ${ROOT_GITHUBDIR}/configs ]; then
    git clone git@github.com:ktakuminnnjp1983/configs ${ROOT_GITHUBDIR}/configs
fi
if [ ! -e ${ROOT_GITHUBDIR}/vim ]; then
    git clone git@github.com:ktakuminnnjp1983/vim ${ROOT_GITHUBDIR}/vim
fi

if [ ! -e ~/.bashrc ]; then
    ln -s ${ROOT_GITHUBDIR}/configs/.bashrc ~/.bashrc 
fi
if [ ! -e ~/.zshrc ]; then
    ln -s ${ROOT_GITHUBDIR}/configs/.zshrc ~/.zshrc 
fi
if [ ! -e ~/.vimrc ]; then
    ln -s ${ROOT_GITHUBDIR}/vim/.vimrc ~/.vimrc 
fi

if [ $UID -eq 0 -a ! -e ~/.vim ]; then
    ln -s ${ROOTDIR}/.vim ~/.vim 
fi
if [ $UID -eq 0 -a ! -e ~/.bash_history ]; then
    ln -s ${ROOTDIR}/.bash_history /.bash_history 
fi
if [ $UID -eq 0 -a ! -e ~/.zsh_history ]; then
    ln -s ${ROOTDIR}/.zsh_history ~/.zsh_history 
fi

if [ -e ${ROOTDIR}/.commonfxrc ]; then
    . ${ROOTDIR}/.commonfxrc
fi

export NAME="kobayashi"
export FULLNAME="Takumi Kobayashi"

export PATH=/home/kobayashi/myscript:/home/kobayashi/desktop/myscript:/home/kobayashi/local/bin:/home/kobayashi/bin:/usr/local/bin:$PATH

export VIMRC=~/.vimrc
export SVN_EDITOR="vim"

if [ -e /usr/java/ ]; then
    export JAVA_HOME=/usr/java/jdk1.7.0_05
    export JAVA_BINDIR=/$JAVA_HOME/bin
    export PATH=$JAVA_HOME/bin:$PATH
    export CLASSPATH=.:$JAVA_HOME/jre/lib:$JAVA_HOME/lib:$JAVA_HOME/lib/tools.jar
fi

alias ls='ls --color=auto'
alias grep='grep --color'
alias m='make install'
alias pg='ps -e | grep '
alias ctags='ctags -f .tags'
alias findjavap="netstat -lpt 2> /dev/null | grep java | awk 'NR==1{print \$7}' | sed -e 's/\(.*\)\/\(.*\)/\1/'"

ulimit -c unlimited
FIGNORE=CVS:.svn

if [ -e ~/gitdirs/nvm/ ]; then
    . ~/gitdirs/nvm/nvm.sh 
    nvm use v0.11.10 > /dev/null
fi

