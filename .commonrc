#!/bin/sh

if [ -e ${ROOTDIR}/.commonfxrc ]; then
    . ${ROOTDIR}/.commonfxrc
fi

export NAME="kobayashi"
export FULLNAME="Takumi Kobayashi"

export PATH=/home/kobayashi/myscript:/home/kobayashi/desktop/myscript:/home/kobayashi/local/bin:/home/kobayashi/bin:/usr/local/bin:$PATH

export VIMRC=~/.vimrc
export SVN_EDITOR="vim"

if [ -e /usr/java/ ]; then
    export JAVA_HOME=/usr/java/jdk1.7.0_05
    export JAVA_BINDIR=/$JAVA_HOME/bin
    export PATH=$JAVA_HOME/bin:$PATH
    export CLASSPATH=.:$JAVA_HOME/jre/lib:$JAVA_HOME/lib:$JAVA_HOME/lib/tools.jar
fi

alias ls='ls --color=auto'
alias grep='grep --color'
alias m='make install'
alias pg='ps -e | grep '
alias ctags='ctags -f .tags'
alias findjavap="netstat -lpt 2> /dev/null | grep java | awk 'NR==1{print \$7}' | sed -e 's/\(.*\)\/\(.*\)/\1/'"

function gc(){
    git commit -a -m "mod"
    if [ 0 -eq $? ]; then
        echo "commit succeeded"
        git push
    fi
}


ulimit -c unlimited
FIGNORE=CVS:.svn

if [ -e ~/gitdirs/nvm/ ]; then
    . ~/gitdirs/nvm/nvm.sh 
    nvm use v0.11.10 > /dev/null
fi

