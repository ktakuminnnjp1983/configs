#!/bin/sh

if [ -e ${ROOTDIR}/.commonfxrc ]; then
    . ${ROOTDIR}/.commonfxrc
fi

export NAME="kobayashi"
export FULLNAME="Takumi Kobayashi"

export PATH=/home/kobayashi/myscript:/home/kobayashi/desktop/myscript:/home/kobayashi/local/bin:/home/kobayashi/bin:/usr/local/bin:$PATH

export VIMRC=~/.vimrc
export SVN_EDITOR="vim"

if [ -e /usr/java/ ]; then
    export JAVA_HOME=/usr/java/jdk1.7.0_05
    export JAVA_BINDIR=/$JAVA_HOME/bin
    export PATH=$JAVA_HOME/bin:$PATH
    export CLASSPATH=.:$JAVA_HOME/jre/lib:$JAVA_HOME/lib:$JAVA_HOME/lib/tools.jar
fi

alias ls='ls --color=auto'
alias grep='grep --color'
alias m='make install'
alias pg='ps -e | grep '
alias ctags='ctags -f .tags'
alias findjavap="netstat -lpt 2> /dev/null | grep java | awk 'NR==1{print \$7}' | sed -e 's/\(.*\)\/\(.*\)/\1/'"

function gc(){
    git commit -a -m "mod"
    if [ 0 -eq $? ]; then
        echo "commit done"
        git push
    else
        echo "nothing to commit"
    fi
}
function kobayashi(){
    echo kobayashi
}
function tf(){
    echo $#
    if [  $# = 0 ]; then
        echo "arg error. input target [word]"
        return 
    fi 
    # -F ではファイルがローテートされた場合でも追跡するらしい --retry と同等
    if [ $# = 1 ]; then
        tail -F $1
    else
        echo gori
        tail -F $1 | grep -i $2
    fi
}

ulimit -c unlimited
FIGNORE=CVS:.svn

# node.js nvm
if [ -e ~/gitdirs/nvm/ ]; then
    . ~/gitdirs/nvm/nvm.sh 
    nvm use v0.11.10 > /dev/null
fi

# ruby rvm
if [ -e ~/.rvm/scripts/rvm ]; then
    . ~/.rvm/scripts/rvm 
    rvm use 2.0.0 >/dev/null 2>&1
fi


